@using DataModels.Models
@model UpdateMyProfileViewModel

@{
    ViewBag.Title = "Update Your Profile";
}

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="Edit">
            <div class="mb-3">
                <label asp-for="Age" class="form-label">Age</label>
                <input asp-for="Age" class="form-control" aria-required="true" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Weight" class="form-label">Weight</label>
                <input asp-for="Weight" class="form-control" aria-required="true" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Height" class="form-label">Height</label>
                <input asp-for="Height" class="form-control" aria-required="true" />
                <span asp-validation-for="Height" class="text-danger"></span>
            </div>
             <div class="mb-3">
                <label asp-for="SetGoals" class="form-label">Set Goals</label>
                <input asp-for="SetGoals" class="form-control" aria-required="true" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
             <div class="mb-3">
                <label asp-for="Notes" class="form-label">Fitness Diary</label>
                <input asp-for="Notes" class="form-control" aria-required="true" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="TypeOfSports" class="form-label">TypeOf Sport</label>
                <select asp-for="TypeOfSports" class="form-control">
                    @foreach (var sport in Model.TypeOfSports)
                    {
                        <option value="@sport.Id">@sport.Name</option>
                    }
                 </select>
                @*<span asp-validation-for="BoardId" class="text-danger"></span>*@
            </div>
            <div class="mb-3">
                <input class="btn btn-primary" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>
