@using DataModels.Models
@model AddGymViewModel
@{
    ViewBag.Title = "Edit Gym";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form enctype="multipart/form-data" method="post">
            <div class="mb-3">
                <label asp-for="@Model.Name" class="form-label">Fitness Name</label>
                <input asp-for="@Model.Name" class="form-control" aria-required="true" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Address" class="form-label">Address</label>
                <input asp-for="@Model.Address" class="form-control" aria-required="true" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            @if (Model.HasImageUrl)
            {
                <div class="mb-3">
                    <label asp-for="@Model.ImageUrl" class="form-label"></label>
                    <div class="custom-file">
                        <input asp-for="@Model.ImageUrl" class="custom-file-input" aria-required="true"
                           onchange="document.getElementById('FrontImagePrv').src = window.URL.createObjectURL(this.files[0])" />
                        <label class="custom-file-label"></label>
                    </div>
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    <img id="FrontImagePrv" src="" alt="Logo Image" width="250" height="250" style="border:1px; margin-top:20px; margin-left:120px" />
                </div>
            }
            <div class="mb-3">
                <input class="btn btn-success" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
<partial name="_ValidationScriptsPartial" />

<script type="text/javascript">
    $(".custom-file-input").on("change", function () {
        var fileName = $(this).val().split("\\").pop();
        $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
    });
</script>
}