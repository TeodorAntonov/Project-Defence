@using DataModels.Models
@model IEnumerable<GymViewModel>

@{
    ViewBag.Title = "All Gyms";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
    @foreach (var gym in Model)
    {
        <div class="card col-4" style="width: 20rem; margin-right: 10px; margin: 5px">
            <img class="card-img-top" style="width: 18rem;"
             src="@gym.ImageUrl" alt="Gym Image">
            <div class="card-body">

                <h5 class="card-title mt-1">@gym.Name</h5>
                <p class="mb-0">Address: @gym.Address</p>
            </div>

             @if (User?.IsInRole("Administrator") ?? false)
               {
                  <a asp-controller="Admin" asp-action="EditGym" asp-route-gymId="@gym.Id" class="btn btn-primary mb-3">Edit</a>
                   <span></span>
                  <a asp-controller="Admin" asp-action="DeleteGym" asp-route-gymId="@gym.Id" class="btn btn-danger mb-3">Delete</a>
               }
        </div>
    }
</div>
