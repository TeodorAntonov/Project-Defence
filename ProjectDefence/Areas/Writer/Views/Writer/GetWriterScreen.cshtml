@using DataModels.Models
@model WriterViewModel

@{
    ViewBag.Title = "Writer Section";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Private Writer</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProjectDefence.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav>
            <h1 class="text-center" style="font-style: italic; text-decoration: underline;">@ViewBag.Title</h1>
            <br />
            <br />
            <br />
            <br />
            <div class="center">
                <p style="font-style: italic; text-decoration: underline; font-size: 25px; text-align: center">You are a Writer and Corrector of All Posts! If You want to Create or Delete a current post please select one of the buttons below.</p>
            </div>
            <br />
            <div class="text-center">
                <a style="width: 20%; height: 100%;" asp-controller="Admin" asp-action="EditTrainer" class="btn btn-primary btn-lg">Create Post +</a>
            </div>
        </nav>
    </header>
</body>


